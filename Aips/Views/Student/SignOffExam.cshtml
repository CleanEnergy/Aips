@model EntityClasses.ExamViewModel

@{
    ViewBag.Title = "Sign off exam";
}

<h2>Sign off exam</h2>

<h3>Are you sure you want to sign off this exam?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.SubjectName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubjectName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ClassroomName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClassroomName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ExamDateAndTime)
        </dt>

        <dd>
