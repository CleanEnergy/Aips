@{
    ViewBag.Title = "Sent items";
}

@Html.Partial("_MessagingNavigation")
<h2>@ViewBag.Title</h2>

<table class="table table-hover table-responsive table-striped">
    <thead>
        <tr>
            <th>To</th>
            <th>Received</th>
            <th>Subject</th>
            <th></th>
        </tr>
    </thead>
    @foreach (EntityClasses.UserMessage message in ViewBag.Messages)
    {
        <tr>
            <td>@message.RecepientUsername</td>
            <td>@message.SentOn</td>
            <td>@message.Subject</td>
            <td>
                @Html.ActionLink("Read", "ReadMessage", new { id = message.UserMessageId }) |
                @Html.ActionLink("Trash", "TrashMessage", new { id = message.UserMessageId })
            </td>
        </tr>
    }
</table>