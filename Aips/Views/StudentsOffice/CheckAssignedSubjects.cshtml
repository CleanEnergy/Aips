@model IEnumerable<EntityClasses.AssignedSubjectViewModel>

@{
    ViewBag.Title = "Check assigned subjects";
}

<h2>Assigned subjects</h2>

<div class="table-responsive">
    <table class="table table-hover table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProfessorFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfessorLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubjectTitle)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProfessorFirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProfessorLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubjectTitle)
                </td>
                <td>
                    @Html.ActionLink("Unassign", "UnassignSubject", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </table>
</div>