@{
    List<EntityClasses.Exam> exams = ViewBag.Exams;
}
<div class="form-group">
    <label class="control-label col-md-2">Select an exam</label>
    <div class="col-md-10">
        <table class="table table-responsive">

            <tr>
                <th>Date</th>
                <th>Time</th>
                <th></th>
            </tr>

            @foreach (EntityClasses.Exam exam in exams)
            {
                <tr>
                    <td>
                        @exam.DateAndTime.ToShortDateString()
                    </td>
                    <td>
                        @exam.DateAndTime.ToShortTimeString()
                    </td>
                    <td>
                        @Html.ActionLink("Upload...", "StoreExamPDFPreUpload", new { examId = exam.ExamId }, new { @class = "btn btn-info btn-xs" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>