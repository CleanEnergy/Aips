
@{
    ViewBag.Title = "StoreExamPDFUpload";
}

<h2>Upload exam</h2>

@using(Html.BeginForm("StoreExamPDFUpload", "StudentsOffice", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-md-2">Select a file</label>
            <div class="col-md-10">
                <input type="file" name="examCopy" style="margin-top:5px;" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10 col-md-push-2">
                <input type="submit" value="Upload" class="btn btn-default" />
            </div>
        </div>

    </div>
}