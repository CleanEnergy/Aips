@model IEnumerable<EntityClasses.ExamViewModel>

@{
    ViewBag.Title = "CheckScheduledExams";
}

<h2>Scheduled exams</h2>

<table class="table table-responsive table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ExamDateAndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubjectName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ExamDateAndTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubjectName)
        </td>
        <td>
            @Html.ActionLink("Edit", "ChangeExamDate", new {  examId = item.ExamId }) |
            @Html.ActionLink("Delete", "CancelExam", new { examId = item.ExamId })
        </td>
    </tr>
}

</table>
