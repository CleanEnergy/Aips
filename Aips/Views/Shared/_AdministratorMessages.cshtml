<div class="table-responsive">
    <table class="table table-hover table-striped">
        <tr>
            <th>Title</th>
            <th>Posted on</th>
            <th>Content</th>
        </tr>
        @foreach (var message in ViewBag.AdminMessages)
        {
            <tr>
                <td>@message.Title</td>
                <td>@message.PostedOn</td>
                <td>@message.Content</td>
            </tr>
        }
    </table>
</div>